
# working as clerk and earning more than 1500
SELECT * FROM EMP
WHERE JOB="CLERK" AND SAL>1500;


# Details of emmp along with annual salary if they are working in dept 30
SELECT ENAME, SAL, SAL*12 AS ANNUALSAL 
FROM EMP
WHERE DEPT=30;


# Details of an emp who working in dept 30 OR as an analyst
SELECT * 
FROM EMP
WHERE DEPT=30 OR JOB = 'ANALYST';


# Details of emp who working as clerk or manager or salesman
SELECT * FROM EMP
WHERE JOB ='CLERK' AND JOB='MANAGER' OR JOB='SALESMAN' ;
